@page "/students/delete"
@using Microsoft.EntityFrameworkCore
@using Academy.Models
@inject IDbContextFactory<Academy.Models.Pv319ImportContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Students</h2>
    <hr />
    @if (students is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">LastName</dt>
            <dd class="col-sm-10">@students.LastName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">FirstName</dt>
            <dd class="col-sm-10">@students.FirstName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">MiddleName</dt>
            <dd class="col-sm-10">@students.MiddleName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">BirthDate</dt>
            <dd class="col-sm-10">@students.BirthDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@students.Email</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@students.Phone</dd>
        </dl>
        @* <dl class="row">
            <dt class="col-sm-2">Photo</dt>
            <dd class="col-sm-10">@students.Photo</dd>
        </dl> *@
        <dl class="row">
            <dt class="col-sm-2">Group</dt>
            <dd class="col-sm-10">@students.Group</dd>
        </dl>
        <EditForm method="post" Model="students" OnValidSubmit="DeleteStudents" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(students is null)">Delete</button> |
            <a href="/students">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Students? students;

    [SupplyParameterFromQuery]
    private int StudId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        students = await context.Students.FirstOrDefaultAsync(m => m.StudId == StudId);

        if (students is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteStudents()
    {
        using var context = DbFactory.CreateDbContext();
        context.Students.Remove(students!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/students");
    }
}
