@page "/teachers"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Academy.Models
@using Academy.Models
@implements IAsyncDisposable
@rendermode InteractiveServer
@inject IDbContextFactory<Academy.Models.Pv319ImportContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="teachers/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Teachers" Pagination="pagination">
    <PropertyColumn Sortable="true" Property="teacher => teacher.LastName" />
    <PropertyColumn Sortable="true" Property="teacher => teacher.FirstName" />
    <PropertyColumn Sortable="true" Property="teacher => teacher.MiddleName" />
    <PropertyColumn Sortable="true" Property="teacher => teacher.Age" /> 
    <PropertyColumn Sortable="true" Property="teacher => teacher.BirthDate" />
    <PropertyColumn Sortable="true" Property="teacher => teacher.Email" />
    <PropertyColumn Sortable="true" Property="teacher => teacher.Phone" />
    @* <PropertyColumn Property="teacher => teacher.Photo" /> *@
    <PropertyColumn Sortable="true" Property="teacher => teacher.Working" />
    <PropertyColumn Sortable="true" Property="teacher => teacher.WorkSince" />
    <PropertyColumn Sortable="true" Property="teacher => teacher.Rate" />

    <TemplateColumn Context="teacher">
        <a href="@($"teachers/edit?teacherid={teacher.TeacherId}")">Edit</a> |
        <a href="@($"teachers/details?teacherid={teacher.TeacherId}")">Details</a> |
        <a href="@($"teachers/delete?teacherid={teacher.TeacherId}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
<Paginator State="pagination"/>

@code {
    @* Pagination: *@
    PaginationState pagination = new PaginationState { ItemsPerPage = 3 };
    private Pv319ImportContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}