@rendermode InteractiveServer
@page "/Bin2Dec"
<h3>Bin2Dec</h3>
<label for="bin">Only 0 or 1</label>
<br>
<input type="text" name="bin" @bind="bin">
<button @onclick="BinToDec">ClickME</button>
<br>
<label>@dec</label>
@code {
    string bin = "";
    double dec = 0;
    void BinToDec()
    {
        dec = 0;
        string tempBin = bin;
        for (int i = 0; i < bin.Length; i++)
        {
            if (bin[i].ToString() == "1")
            {
                dec += Math.Pow(2, i);
            }
        }
        bin = tempBin;
    }
}